            }
          },
          "liveimg": {
            "type": "string"
          },
          "cmdline": {
            "type": "string"
          },
          "verify": {
            "type": "boolean"
          }
        }
      },
      "User": {
        "required": [
          "username"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password_hash": {
            "type": "string"
          },
          "role": {
            "type": "string"
          }
        }
      },
      "DataDump": {
        "required": [
          "hosts"
        ],
        "type": "object",
        "properties": {
          "users": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/User"
            }
          },
          "images": {
            "type": "array",
            "items": {
