            }
          }
        }
      },
      "NetInterface": {
        "type": "object",
        "properties": {
          "mac": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "ip": {
            "type": "string"
          },
          "fqdn": {
            "type": "string"
          },
          "bmc": {
            "type": "boolean"
          }
        }
      },
      "BootImage": {
        "required": [
          "name"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
